{
  //----------------------------------------------------
  // ワークベンチ
  //----------------------------------------------------
  "workbench": {
    "colorTheme": "Ayu Dark",
    "iconTheme": "material-icon-theme",
    "editor": {
      "showTabs": true,
      "highlightModifiedTabs": true,
      "tabSizing": "shrink",
      "tabCloseButton": "off"
    },
    "startupEditor": "off",
    "activityBar": {
      "visible": true
    }
  },
  //----------------------------------------------------
  // エディタ
  //----------------------------------------------------
  "editor": {
    "fontSize": 11,
    "fontFamily": "FiraCode Nerd Font Mono",
    "fontLigatures": true,
    "wordWrap": "on",
    "formatOnSave": true,
    "formatOnPaste": false,
    "suggestSelection": "first",
    "minimap": {
      "enabled": false
    },
    "tabSize": 2,
    "detectIndentation": false
  },
  //----------------------------------------------------
  // ターミナル
  //----------------------------------------------------
  "terminal.integrated": {
    "copyOnSelection": true,
    "fontSize": 10,
    "fontFamily": "FiraCode Nerd Font Mono"
  },
  //----------------------------------------------------
  // vim
  //----------------------------------------------------
  "vim": {
    "easymotion": true,
    "easymotionMarkerForegroundColorOneChar": "#00F0AA",
    "easymotionDimBackground": false,
    "easymotionMarkerWidthPerChar": 19,
    "easymotionMarkerHeight": 0,
    "easymotionMarkerFontFamiliy": "Cica",
    "easymotionMarkerFontSize": "12.5",
    "easymotionMarkerFontWeight": "bold",
    "easymotionKeys": "asdfhjklwqeruioopghty;",
    "easymotionMarkerYOffset": 13.5,
    "easymotionmarkerforegroundcoloronechar": "#da70d6",
    "incsearch": true,
    "usesystemclipboard": true,
    "useCtrlKeys": true,
    "hlsearch": true,
    "sorround": true,
    // vimキーバインド変更
    "insertModeKeyBindings": [
      {
        "before": ["j", "j"],
        "after": ["<Esc>"]
      }
    ],
    "normalModeKeyBindingsNonRecursive": [
      {
        "before": ["<leader>", "d"],
        "after": ["d", "d"]
      },
      {
        "before": ["<C-n>"],
        "commands": [":nohl"]
      },
      {
        "before": ["<Leader>", "h"],
        "after": ["<C-w>", "h"]
      }, //window移動
      {
        "before": ["<Leader>", "j"],
        "after": ["<C-w>", "j"]
      }, //window移動
      {
        "before": ["<Leader>", "k"],
        "after": ["<C-w>", "k"]
      }, //window移動
      {
        "before": ["<Leader>", "l"],
        "after": ["<C-w>", "l"]
      }, //window移動
      {
        "before": ["]"],
        "commands": [
          {
            "command": "C_Cpp.PeekDeclaration"
          }
        ],
        "when": ["editorLangId == c"]
      }, //宣言を見る c専用
      {
        "before": ["["],
        "commands": [
          {
            "command": "editor.action.peekDefinition"
          }
        ]
      }, //定義を見る
      {
        "before": ["s", "s"],
        "commands": [":split"]
      }, //水平に開く
      {
        "before": ["s", "v"],
        "commands": [":vsplit"]
      }, //垂直に開く
      // {
      //   "before": ["t", "u"],
      //   "after": ["g", "t"]
      // }, //tab移動
      // {
      //   "before": ["t", "y"],
      //   "after": ["g", "T"]
      // }, //tab移動
      // {
      //   "before": ["<Leader>", "x"],
      //   "commands": [":q!"]
      // }, //tabを閉じる
      {
        "before": ["<Leader>", "q"],
        "commands": [":qa!"]
      }, //すべてを閉じる
      // {
      //   "before": ["<Leader>", "w"],
      //   "commands": [":wa"]
      // }, //すべてを保存
      {
        "before": ["<Leader>", "c"],
        "commands": [
          {
            "command": "editor.action.commentLine"
          }
        ]
      }, //コメント
      {
        "before": ["<Leader>", ":"],
        "commands": [
          {
            "command": "workbench.action.showCommands"
          }
        ]
      }, //コマンドパレット
      {
        "before": ["<Leader>", ";"],
        "commands": [
          {
            "command": "workbench.action.quickOpen"
          }
        ]
      } //ファイル検索
    ],
    "leader": "<space>",
    "handleKeys": {
      "<C-a>": false,
      "<C-f>": false
    },

    // vimのステータスバー周りの設定
    "statusBarColorControl": false
  },
  //----------------------------------------------------
  // その他
  //----------------------------------------------------
  "files.trimTrailingWhitespace": true,
  "search.searchOnType": false,
  "window.zoomLevel": 0,
  "emmet": {
    "includeLanguages": {
      "erb": "html"
    }
  },
  //****************************************************
  // 拡張機能
  //****************************************************
  // spell checker
  "cSpell": {
    "enabledLanguageIds": [
      "css",
      "html",
      "javascript",
      "json",
      "less",
      "markdown",
      "plaintext",
      "scss",
      "text",
      "ruby",
      "yaml",
      "yml"
    ]
  },
  // background-cover
  "backgroundCover": {
    "imagePath": "/Users/mejamoleo/Pictures/image_for_vscode/max-mckinnon-c9OCWLka764-unsplash.jpg",
    "randomImageFolder": "/Users/mejamoleo/Pictures/image_for_vscode",
    "opacity": 1
  },
  // vscode インテリコード
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // beautify フォーマッター
  "beautify.language": {
    "js": {
      "type": ["javascript", "json", "jsonc"],
      "filename": [".jshintrc", ".jsbeautifyrc"]
    },
    "css": ["css", "less", "scss"],
    "html": ["htm", "html", "erb"]
  },
  //----------------------------------------------------
  // 言語系
  //----------------------------------------------------
  "ruby.useBundler": true,
  "workbench.colorCustomizations": {
    "statusBar.background": "#161821",
    "statusBar.noFolderBackground": "#161821",
    "statusBar.debuggingBackground": "#161821",
    "statusBar.foreground": "#818596"
  },
  "cSpell.userWords": [
    "CODEBAS",
    "Gemfile",
    "Micropost",
    "bootstrap",
    "bootstrap sprokets",
    "datetime",
    "downcase",
    "hexdigest",
    "laravel",
    "mailtrap",
    "microposts",
    "minitest",
    "mixins",
    "nonblank",
    "path",
    "phper",
    "postgresql",
    "railstutorial",
    "rubygems",
    "signup",
    "signup path",
    "smtp",
    "sprokets",
    "sqlite",
    "stylesheets",
    "tmpfs",
    "uneditable",
    "unfollow",
    "unfollowed",
    "upcase",
    "urlsafe",
    "vimindmeister"
  ],
  "[json]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[html]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "[javascript]": {
    "editor.defaultFormatter": "HookyQR.beautify"
  },
  "git.confirmSync": false,
  "gitlens.gitCommands.closeOnFocusOut": true,
  "[php]": {
    "editor.defaultFormatter": "junstyle.php-cs-fixer"
  },
  "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",
  "php-cs-fixer.lastDownload": 1608000137773,
  "workbench.iconTheme": "material-icon-theme",
  "intelephense.diagnostics.undefinedClassConstants": false,
  "intelephense.diagnostics.undefinedConstants": false,
  "intelephense.diagnostics.undefinedFunctions": false,
  "intelephense.diagnostics.undefinedMethods": false,
  "intelephense.diagnostics.undefinedProperties": false,
  "intelephense.diagnostics.undefinedTypes": false,
  "explorer.confirmDelete": false,
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.activityBar.visible": false,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "hediet.vscode-drawio.local-storage": "",
  "diffEditor.ignoreTrimWhitespace": false,
  "workbench.colorTheme": "Iceberg",
  "todo-tree.tree.showScanModeButton": false
}
